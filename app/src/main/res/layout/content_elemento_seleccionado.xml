<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_elemento_seleccionado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.javigabbo.quemepongo.ElementoSeleccionadoActivity"
    tools:showIn="@layout/activity_elemento_seleccionado">

    <ImageView
        android:id="@+id/imagenIV"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/nopic"
        android:scaleType="centerCrop"
        android:layout_marginBottom="15dp"/>



        <LinearLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre:"
                            android:textSize="18sp"
                            android:padding="10sp"
                            android:textColor="#FFF"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:padding="10sp"
                            android:text="Talla:"
                            android:textColor="#FFF"
                            android:textSize="18sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/tvNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="#FFF"
                            android:background="@drawable/edit_text"
                            android:textSize="16sp" />


                        <EditText
                            android:background="@drawable/edit_text"
                            android:id="@+id/tvTalla"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#FFF"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:text="Descripción:"
                        android:textSize="18sp"
                        android:textColor="#FFF"
                        android:textStyle="normal|bold" />

                    <EditText
                        android:id="@+id/tvDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:padding="15dp"
                        android:textColor="#FFF"
                        android:textColorHint="#FFF"
                        android:hint="Sin descripción"
                        android:textSize="17sp"
                        android:background="@drawable/edit_text"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:clickable="false"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/cancelarEdicion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/button"
                    android:padding="10dp"
                    android:text="Cancelar"
                    android:textColor="#FFF"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnUpdateData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/button"
                    android:padding="10dp"
                    android:text="Confirmar"
                    android:textColor="#FFF"
                    android:visibility="invisible" />


            </LinearLayout>

        </LinearLayout>











</LinearLayout>
